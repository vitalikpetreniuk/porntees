	.product-item
	{
		-webkit-transition: opacity .15s linear;
		transition: opacity .15s linear;
	}
}

.products-list.loading
{
	position: relative;

	.product-item 
	{
		opacity: 0;
		visibility: hidden;

		-webkit-transition: opacity .05s linear;
		transition: opacity .05s linear;
	}
}
.products-list.loading:before
{
	content: '';
	display: block;
	position: absolute;
	width: 60px;
	height: 60px;

	top: calc(50vh + 75px - 30px);
	left: 50%;

	-webkit-transform: translate(-50%, -50%);
	transform: translate(-50%, -50%);

	background: url('preloader.svg') no-repeat center center;
	background-size: 100%;
}
.products-list-loaded
{
	opacity: 0;
	visibility: hidden;

	background: #FFFAF4;
	position: fixed;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	padding: 75px 20px 0;
	box-sizing: border-box;
	height: 100vh;
	width: 100%;
	overflow-x: hidden;
	overflow-y: scroll;
}
.products-list-loaded.loaded-items
{
	opacity: 1;
	visibility: visible;
	z-index: 100;
}
