			background: transparent;
			margin-left: 0;
			display: flex;
			flex-wrap: wrap;
			justify-content: space-between;
			align-items: center;

			.grid-item
			{
				padding: 0;
				display: block;

				.tees-logo
				{
					margin-right: 20px;
					display: block;

					.h2.site-header__logo
					{
						line-height: 1;

						a
						{
							display: block;
						}
						a:hover
						{
							color: #EB3B2D;
						}
					}
				}
				.tees-nav
				{
					-webkit-transition: all .15s linear;
					transition: all .15s linear;

					ul
					{
						display: flex;
						flex-wrap: wrap;
						justify-content: flex-start;

					 	li
						{
							display: block;
							margin-right: 20px;

							a
							{
								display: block;
								padding: 0;

								span
								{
									display: block;
									line-height: 1;
								}
							
							}
						}
						li:last-child
						{
							margin-right: 0;
						}
					} 

					.tees-nav_link.active,
					.tees-nav_link:hover
					{
						color: #EB3B2D;
					}
				}
				.tees-nav.loading
				{
					opacity: 0;

					-webkit-transition: all .15s linear;
					transition: all .15s linear;
				}
				.tees-nav.tees-subnav-show
				{
					ul li:not(.active)
					{
						display: none;
					}
					ul li.active a
					{
						margin-right: 20px;
					}
					ul li.active .tees-nav_tags
					{
						display: block !important;

						span
						{
							margin-right: 20px;
							text-transform: uppercase;
							cursor: pointer;
						}
						span:hover,
						span.active
						{
							color: #EB3B2D;
						}
					}
					ul li.active
					{
						display: flex;
						justify-content: flex-start;
					}
				}

				.h2.site-header__logo,
				ul.site-nav
				{
					margin: 0;
				}
				ul.site-nav a .site-nav__label
				{
					border: none !important;
				}
			}
			.grid-item-left
			{
				display: flex;
				justify-content: flex-start;
